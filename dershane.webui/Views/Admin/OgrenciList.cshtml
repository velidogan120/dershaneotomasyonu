@model OgrenciListViewModel




<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Öğrenciler</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/ogrenciler/create">Öğrenci Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 30px;">Resim</td>
                    <td>İsim</td>
                    <td style="width: 20px;">Sınıf</td>
                    <td style="width: 20px;">Anasayfa</td>
                    <td style="width: 20px;">Onaylı</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>

                @if(Model.Ogrenciler.Count>0){
                    @foreach (var item in Model.Ogrenciler)
                        {
                            <tr>
                                <td>@item.OgrenciId</td>
                                <td><img src="~/img/@item.ImageUrl" width="80"></td>
                                <td>@item.Name</td>
                                <td>@item.Sınıf</td>
                                <td>
                                    @if(item.IsHome){
                                    <i class="fas fa-check-circle"></i>
                                    }
                                    else{
                                        <i class="fas fa-times-circle"></i>
                                    }

                                </td>
                                <td>
                                    @if(item.IsApproved){
                                    <i class="fas fa-check-circle"></i>
                                    }
                                    else{
                                        <i class="fas fa-times-circle"></i>
                                    }

                                </td>
                                <td>
                                    <a href="/admin/ogrenciler/@item.OgrenciId" class="btn btn-primary btn-sm mr-2">Düzenle</a>
                                    
                                    <form action="/admin/deleteogrenci" method="POST" style="display: inline;">
                                    <input type="hidden" name="ogrenciId" value="@item.OgrenciId">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>    
                                </td>
                            </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>Öğrenci Yok</h3>
                    </div>

                }
                
            </tbody>
        </table>
    </div>
</div>
@model OgrenciModel

<h1 class="h3">Öğrenci Bilgilerini Düzenle</h1>
<hr>
<form asp-controller="Admin" asp-action="OgrenciEdit" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">

            <input type="hidden" name="OgrenciId" value="@Model.OgrenciId">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea id="editor"class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Sınıf" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Sınıf">
                    <span asp-validation-for="Sınıf" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="hidden"asp-for="ImageUrl">
                    <img src="~/img/@Model.ImageUrl" width="80"/>
                    <input type="file" name="file">
                    
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Öğrenciyi Kaydet</button>
                </div>
            </div>

        </div>
        <div class="col-md-4">
            @for (int i = 0; i < Model.SelectedBolumler.Count; i++)
            {
                <input type="hidden" name="SelectedBolumler[@i].BolumId" value="@Model.SelectedBolumler[@i].BolumId">
                <input type="hidden" name="SelectedBolumler[@i].Name" value="@Model.SelectedBolumler[@i].Name">
            }


            @foreach (var item in (List<Bolum>)ViewBag.Bolumler)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" name="bolumIds" value="@item.BolumId" id="bolum_@(item.BolumId)"
                        @(Model.SelectedBolumler.Any(i=>i.BolumId==item.BolumId)?"checked":"")>
                    <label class="custom-control-label" for="bolum_@(item.BolumId)">@item.Name</label>
                </div>
            }

            <hr>  


            <div class="custom-control custom-checkbox">
                    <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                    <label asp-for="IsApproved" class="custom-control-label"></label>
                </div>
                 <div class="custom-control custom-checkbox">
                    <input asp-for="IsHome" type="checkbox" class="custom-control-input">
                    <label asp-for="IsHome" class="custom-control-label"></label>
                </div>
        </div>
    </div>

</form>

@section Scripts{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="/modules/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace('editor');</script>
}